{% extends 'base.html.twig' %}

{% block title %}Experience index{% endblock %}

{% block body %}
    <h1>Experience index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Societe</th>
                <th>TypeContrat</th>
                <th>StartDate</th>
                <th>EndDate</th>
                <th>Description</th>
                <th>Location</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for experience in experiences %}
            <tr>
                <td>{{ experience.id }}</td>
                <td>{{ experience.libelle }}</td>
                <td>{{ experience.societe }}</td>
                <td>{{ experience.typeContrat }}</td>
                <td>{{ experience.startDate ? experience.startDate|date('Y-m-d') : '' }}</td>
                <td>{{ experience.endDate ? experience.endDate|date('Y-m-d') : '' }}</td>
                <td>{{ experience.description }}</td>
                <td>{{ experience.location }}</td>
                <td>
                    <a href="{{ path('admin_experience_edit', {'id': experience.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_experience_new') }}">Create new</a>
{% endblock %}
