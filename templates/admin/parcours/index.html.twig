{% extends 'base.html.twig' %}

{% block title %}Parcours index{% endblock %}

{% block body %}
    <h1>Parcours index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Diplome</th>
                <th>Annee</th>
                <th>Etablissement</th>
                <th>Commune</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for parcour in parcours %}
            <tr>
                <td>{{ parcour.id }}</td>
                <td>{{ parcour.diplome }}</td>
                <td>{{ parcour.annee }}</td>
                <td>{{ parcour.etablissement }}</td>
                <td>{{ parcour.commune }}</td>
                <td>
                    <a href="{{ path('parcours_edit', {'id': parcour.id,'lang': app.request.get('lang')}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('parcours_new',{"lang": app.request.get("lang")}) }}">Create new</a>
{% endblock %}
