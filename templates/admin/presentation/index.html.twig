{% extends 'base.html.twig' %}

{% block title %}Presentation index{% endblock %}

{% block body %}
<section class="ftco-section bg-light">
    <div class="container">
    <h1>Presentation</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Age</th>
                <th>Job</th>
                <th>NativeCountry</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for presentation in presentations %}
            <tr>
                <td>{{ presentation.id }}</td>
                <td>{{ presentation.birthday |date("m/d/Y") }}</td>
                <td>{{ presentation.job }}</td>
                <td>{{ presentation.nativeCountry }}</td>
                <td>{{ presentation.email }}</td>
                <td>
                    <a href="{{ path('admin_presentation_edit', {'id': presentation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_presentation_new') }}">Cr√©er un nouveau</a>
    </div>
</section>
{% endblock %}
