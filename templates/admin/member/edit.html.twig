        <div class="row justify-content-center">
            <div class="col-xl-6 col-md-10">
                <div class="login_wrap widget-taber-content p-30 bg-white border-radius-10">
                    <div class="padding_eight_all bg-white">
                        <div class="heading_s1 text-center">
                            <h3 class="mb-30 font-weight-900">Modifier un administrateur</h3>
                            {% for message in app.flashes('info') %}
                                <div class="alert alert-info">
                                    {{ message }}
                                </div>
                            {% endfor %}
                        </div>
                        {{ include('admin/member/_form.html.twig', {button_label: "Modifier l'administrateur"}) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
